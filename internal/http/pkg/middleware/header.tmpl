package middleware

import (
	"net/http"
	"strings"

	"github.com/google/uuid"
	"github.com/noble-gase/ne/metadata"
)

const XTraceId = "x-trace-id"

// Header is a middleware that injects http headers into the context of each request.
func Header(next http.Handler) http.Handler {
	return http.HandlerFunc(func(w http.ResponseWriter, r *http.Request) {
		ctx := r.Context()

		md, ok := metadata.FromIncomingContext(ctx)
		if !ok {
			md = metadata.Pairs()
		}

		for k, v := range r.Header {
			md.Set(k, v...)
		}

		// traceId
		var traceId string
		if vals := md.Get(XTraceId); len(vals) != 0 {
			traceId = vals[0]
		}
		if len(traceId) == 0 {
			traceId = strings.ReplaceAll(uuid.New().String(), "-", "")
			md.Set(XTraceId, traceId)
		}

		// set response header
		w.Header().Set(XTraceId, traceId)

		// reset request context
		next.ServeHTTP(w, r.WithContext(metadata.NewIncomingContext(ctx, md)))
	})
}
