package identity

import (
	"context"
	"crypto/aes"
	"encoding/base64"
	"encoding/json"
	"fmt"

	"{{.Module}}/pkg/lib/log"

	"github.com/noble-gase/ne/crypts"
	"github.com/spf13/viper"
	"go.uber.org/zap"
)

// Identity 授权身份
type Identity interface {
	// ID 授权ID
	ID() int64
	// Token 登录Token
	Token() string
	// String 用于日志记录
	String() string
	// AsAuthToken 生成授权Token
	AsAuthToken() (string, error)
}

type identity struct {
	I int64  `json:"i,omitempty"`
	T string `json:"t,omitempty"`
}

func (i *identity) ID() int64 {
	if i != nil {
		return i.I
	}
	return 0
}

func (i *identity) Token() string {
	if i != nil {
		return i.T
	}
	return ""
}

func (i *identity) String() string {
	if i == nil || i.I == 0 {
		return "<nil>"
	}
	return fmt.Sprintf("id:%d|token:%s", i.I, i.T)
}

func (i *identity) AsAuthToken() (string, error) {
	b, err := json.Marshal(i)
	if err != nil {
		return "", fmt.Errorf("json.Marshal: %w", err)
	}

	key := []byte(viper.GetString("app.secret"))
	ct, err := crypts.EncryptCBC(key, key[:aes.BlockSize], b)
	if err != nil {
		return "", fmt.Errorf("crypts.EncryptCBC: %w", err)
	}
	return ct.String(), nil
}

// NewEmpty 空授权信息
func NewEmpty() Identity {
	return new(identity)
}

// New 用户授权信息
func New(id int64, token string) Identity {
	return &identity{
		I: id,
		T: token,
	}
}

type identityKey struct{}

// NewContext 将Identity注入context
func NewContext(ctx context.Context, token string) context.Context {
	return context.WithValue(ctx, identityKey{}, FromAuthToken(ctx, token))
}

// FromContext 获取授权信息
func FromContext(ctx context.Context) Identity {
	if ctx == nil {
		return NewEmpty()
	}

	id, ok := ctx.Value(identityKey{}).(Identity)
	if !ok {
		return NewEmpty()
	}
	return id
}

// FromAuthToken 解析授权Token
func FromAuthToken(ctx context.Context, token string) Identity {
	cipherText, err := base64.StdEncoding.DecodeString(token)
	if err != nil {
		log.Error(ctx, "[AuthToken] base64.Decode failed", zap.Error(err))
		return NewEmpty()
	}

	key := []byte(viper.GetString("app.secret"))
	plainText, err := crypts.DecryptCBC(key, key[:aes.BlockSize], cipherText)
	if err != nil {
		log.Error(ctx, "[AuthToken] crypts.DecryptCBC failed", zap.Error(err))
		return NewEmpty()
	}

	id := NewEmpty()
	if err = json.Unmarshal(plainText, id); err != nil {
		log.Error(ctx, "[AuthToken] json.Unmarshal failed", zap.Error(err))
		return NewEmpty()
	}
	return id
}
