// FindLiteOne 查询一条记录
//
//	// 导入模块
//	import . "github.com/go-jet/jet/v2/sqlite"
//
//	// 语句示例
//	table.Demo.SELECT(table.Demo.AllColumns).WHERE(table.Demo.ID.EQ(Int64(1)))
//	SELECT(table.Demo.AllColumns).FROM(table.Demo).WHERE(table.Demo.ID.EQ(Int64(1)))
//
//	// 查询方法
//	db.FindLiteOne[model.Demo](ctx, db.DB(), stmt)
func FindLiteOne[T any](ctx context.Context, db *sql.DB, stmt SelectStatement) (*T, error) {
	stmt = stmt.LIMIT(1)

	// SQL日志
	slog.InfoContext(ctx, UglySQL(stmt.DebugSql()))

	var dest T
	if err := stmt.QueryContext(ctx, db, &dest); err != nil {
		if !errors.Is(err, qrm.ErrNoRows) {
			return nil, err
		}
		return nil, nil
	}
	return &dest, nil
}

