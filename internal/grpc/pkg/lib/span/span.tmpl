package span

import (
	"context"
	"runtime"
	"strings"
	"time"

	"{{.Module}}/pkg/lib/log"

	"go.uber.org/zap"
)

type Span struct {
	f string
	l int
	n string
	t time.Time
	m string
}

func (s *Span) Finish(ctx context.Context) {
	log.Info(ctx, "[span] time consume",
		zap.String("function", s.n),
		zap.String("duration", time.Since(s.t).String()),
		zap.String("file", s.f),
		zap.Int("line", s.l),
		zap.String("msg", s.m),
	)
}

// New returns a span to log the time consume.
//
// Example:
//
//	sp := span.New()
//	defer sp.Finish(ctx)
func New(msg ...string) *Span {
	sp := &Span{t: time.Now(), m: "<nil>"}
	if len(msg) != 0 {
		sp.m = msg[0]
	}
	// Skip level 1 to get the caller function
	pc, file, line, _ := runtime.Caller(1)
	sp.f, sp.l = file, line
	// Get the function details
	if fn := runtime.FuncForPC(pc); fn != nil {
		name := fn.Name()
		sp.n = name[strings.Index(name, ".")+1:]
	}
	return sp
}
